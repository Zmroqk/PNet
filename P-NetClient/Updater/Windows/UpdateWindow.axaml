<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PNetClient.Updater.Windows"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PNetClient.Updater.Windows.UpdateWindow"
        Title="Ping Net Client Update Available"
        MaxWidth="600"
        MaxHeight="300">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <Label Content="{Binding UpdateVersion}"/>
    <Button Command="{Binding DownloadNewVersion}" Content="Update" Width="400" IsEnabled="{Binding ButtonsEnabled}"></Button>
    <Button Command="{Binding SkipVersion}" Content="Skip" Width="400" IsEnabled="{Binding ButtonsEnabled}"></Button>
  </StackPanel>
</Window>
